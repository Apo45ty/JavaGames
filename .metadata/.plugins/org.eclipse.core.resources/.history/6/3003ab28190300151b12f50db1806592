package com.apo45ty.minefront.graphics;

import java.util.*;

import com.apo45ty.minefront.*;

public class Screen extends Render {

	private Render test;
	
	public Screen(int width, int height) {
		super(width, height);
		Random random = new Random();
		test = new Render(256,256);
		for(int i=0;i<test.width*test.height;i++){
			test.pixels[i]=random.nextInt()*(random.nextInt(5)/4);
		}
	}
	
	public void render(Game game){
		for(int i=0;i<width*height;i++){
			pixels[i]=0;
		}
		for(int i=0;i<100;i++){
			int anim = (int) (Math.sin((game.Time+i*i)%2000.0/2000*Math.PI *2)*100);
			int anim2 = (int) (Math.cos((game.Time+i*i)%2000.0/2000*Math.PI *2)*100);
			draw(test, (width-test.width)/2 + anim,(height - test.height)/2+anim2);
		}
	}
}
