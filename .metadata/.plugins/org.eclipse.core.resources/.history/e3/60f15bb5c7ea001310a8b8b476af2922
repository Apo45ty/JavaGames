package game.engine;

import static minecraft2d.World.BLOCK_SIZE;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;

import org.newdawn.slick.opengl.Texture;
import org.newdawn.slick.opengl.TextureLoader;

import static org.lwjgl.opengl.GL11.*;

public class TempSprite implements Sprite {
	int x,y;
	private static Texture Belly;
	private static Texture Chest;
	private static Texture ChestPlate;
	private static Texture Eyes;
	private static Texture Eyes02;
	private static Texture Head;
	private static Texture Hips;
	private static Texture LeftFoot;
	private static Texture LeftForearm;
	private static Texture LeftHand;
	private static Texture LeftKnee;
	private static Texture LeftLeg;
	private static Texture LeftShoulder;
	private static Texture Pants;
	private static Texture RightFoot;
	private static Texture RightForearm;
	private static Texture RightHand;
	private static Texture RightKnee;
	private static Texture RightLeg;
	private static Texture RightShoulder;;
	
	public TempSprite(String... spriteFolderPathAndXMLFile) {
		String[] parts =
			{
				"Belly.png",
				"Chest.png",
				"ChestPlate.png",
				"Eyes.png",
				"Eyes02.png",
				"Head.png",
				"Hips.png",
				"LeftFoot.png",
				"LeftForearm.png",
				"LeftHand.png",
				"LeftKnee.png",
				"LeftLeg.png",
				"LeftShoulder.png",
				"Pants.png",
				"RightFoot.png",
				"RightForearm.png",
				"RightHand.png",
				"RightKnee.png",
				"RightLeg.png",
				"RightShoulder.png"
			};
		Texture[] result = new Texture[parts.length];
		for(int i=0;i<parts.length;i++){
			try {
				result[i] = TextureLoader.getTexture("PNG", new FileInputStream(
						new File(parts[i])));
			} catch (FileNotFoundException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		Belly = result[0];
		Chest = result[1];
		ChestPlate = result[2];
		Eyes = result[3];
		Eyes02 = result[4];
		Head = result[5];
		Hips = result[6];
		LeftFoot = result[7];
		LeftForearm = result[8];
		LeftHand = result[9];
		LeftKnee = result[10];
		LeftLeg = result[11];
		LeftShoulder = result[12];
		Pants = result[13];
		RightFoot = result[14];
		RightForearm = result[15];
		RightHand = result[16];
		RightKnee = result[17];
		RightLeg = result[18];
		RightShoulder = result[19];
		
	}
	public TempSprite(String spriteFilePath,String xmlFile) {
		//TODO
	}
	
	public void Draw() {
		player.bind();
		glLoadIdentity();
		glTranslatef(0, 0, 0);
		glBegin(GL_QUADS);
			glTexCoord2f(player_x_dir ,0);
			glVertex2f(player_x-BLOCK_SIZE,player_y-BLOCK_SIZE*2);
			glTexCoord2f(1-player_x_dir,0);
			glVertex2f(player_x,player_y-BLOCK_SIZE*2);
			glTexCoord2f(1-player_x_dir, 1);
			glVertex2f(player_x, player_y);
			glTexCoord2f(player_x_dir, 1);
			glVertex2f(player_x-BLOCK_SIZE, player_y);
		glEnd();
		glLoadIdentity();
	}
}
